<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wave="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/black_gradient"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.nsh.pucho.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:translationZ="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ps"
            android:text="Welcome to"
            android:textColor="#fff"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/psb"
            android:text="Pucho"
            android:textColor="#fff"
            android:textSize="40sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:fontFamily="@font/ps"
            android:text=" Login"
            android:id="@+id/l_title"
            android:textColor="#fff"
            android:textSize="20dp" />

        <LinearLayout
            android:id="@+id/login_base"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="visible">

            <ProgressBar
                android:id="@+id/load"
                android:visibility="visible"
                    android:layout_margin="8dp"
                android:layout_width="32dp"
                android:layout_height="32dp" />

            <ImageButton
                android:id="@+id/google"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="#00000000"

                android:foreground="?attr/selectableItemBackground"
                android:padding="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/google" />

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:layout_margin="8dp"
                android:background="#fff"
                android:gravity="center"
                android:visibility="gone" />


            <ImageButton
                android:id="@+id/facebook"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="#00000000"
                android:padding="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/facebook" />


        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tnc1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tnc2"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/ps"
        android:text="@string/tnc1"
        android:textColor="#fff"
        android:translationZ="2dp" />

    <TextView
        android:id="@+id/tnc2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/ps"
        android:text="@string/tnc2"
        android:textColor="#fff"
        android:translationZ="2dp" />

    <com.john.waveview.WaveView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00ffffff"
        android:translationY="50dp"
        wave:above_wave_color="#222"
        wave:blow_wave_color="#111"
        wave:progress="26"
        wave:wave_height="large"
        wave:wave_hz="fast"
        wave:wave_length="little" />

    <com.john.waveview.WaveView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00ffffff"
        android:rotation="5"
        android:scaleX="100"
        android:translationX="-100dp"
        android:translationY="50dp"
        wave:above_wave_color="#222"
        wave:blow_wave_color="#111"
        wave:progress="26"
        wave:wave_height="large"
        wave:wave_hz="fast"
        wave:wave_length="little" />

    <com.john.waveview.WaveView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00ffffff"
        android:rotation="-5"
        android:scaleX="100"
        android:translationX="100dp"
        android:translationY="50dp"
        wave:above_wave_color="#222"
        wave:blow_wave_color="#111"
        wave:progress="26"
        wave:wave_height="large"
        wave:wave_hz="fast"
        wave:wave_length="little" />

</RelativeLayout>
